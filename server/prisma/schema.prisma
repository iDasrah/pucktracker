generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Player {
    id          Int           @id
    fullName    String
    team        Team?         @relation(fields: [teamId], references: [teamCode])
    teamId      String?
    position    String
    playerStats PlayerStats[]
}

model Team {
    teamCode  String   @id
    name      String
    players   Player[]
    awayGames Game[]   @relation("AwayTeam")
    homeGames Game[]   @relation("HomeTeam")
}

model Game {
    id         String   @id @default(cuid())
    awayTeam   Team?    @relation("AwayTeam", fields: [awayTeamId], references: [teamCode])
    awayTeamId String?
    homeTeam   Team?    @relation("HomeTeam", fields: [homeTeamId], references: [teamCode])
    homeTeamId String?
    date       DateTime
}

model PlayerStats {
    id       String  @id @default(cuid())
    player   Player? @relation(fields: [playerId], references: [id])
    playerId Int?
    goals    Int
    assists  Int
    points   Int
}
