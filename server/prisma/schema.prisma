generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Player {
    id          Int           @id
    fullName    String
    team        Team?         @relation(fields: [teamId], references: [teamCode])
    teamId      String?
    position    String
    playerStats PlayerStats[]
}

model Team {
    teamCode String   @id
    name     String
    players  Player[]
}

model PlayerStats {
    player   Player? @relation(fields: [playerId], references: [id])
    playerId Int     @id
    goals    Int
    assists  Int
    points   Int
}
